{
  "name": "camunda-modeler",
  "version": "1.0.0",
  "main": "./src/main.ts",
  "repository": "https://github.com/rayhankinan/camunda-modeler.git",
  "author": "rayhankinan <rayhankinan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "prepare": "husky install",
    "prebuild": "yarn generate && yarn migrate-deploy",
    "generate": "prisma generate",
    "seed": "prisma db seed",
    "lint": "eslint --config .eslintrc.cjs --ext .ts .",
    "migrate-dev": "prisma migrate dev",
    "migrate-deploy": "prisma migrate deploy",
    "build": "tsc",
    "start:main": "env-cmd cross-env NODE_ENV=production node dist/main.js",
    "start:worker": "env-cmd cross-env NODE_ENV=production node dist/worker.js",
    "start": "run-p start:*",
    "dev:main": "env-cmd cross-env NODE_ENV=development nodemon src/main.ts",
    "dev:worker": "env-cmd cross-env NODE_ENV=development nodemon src/worker.ts",
    "dev": "run-p dev:*",
    "studio": "prisma studio",
    "postinstall": "yarn generate"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/eslint": "^8.44.3",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.7.0",
    "@types/nodemailer": "^6.4.11",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "pretty-quick": "^3.1.3",
    "prisma": "^5.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "@react-email/components": "^0.0.7",
    "@t3-oss/env-core": "^0.6.1",
    "bcrypt": "^5.1.1",
    "module-alias": "^2.2.3",
    "nodemailer": "^6.9.5",
    "ts-pattern": "^5.0.5",
    "zeebe-node": "^8.2.5",
    "zod": "^3.22.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
